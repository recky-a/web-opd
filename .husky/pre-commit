#!/usr/bin/env sh

# Exit on any error
set -e

# Check if pnpm is available
if ! command -v pnpm >/dev/null 2>&1; then
echo "âŒ pnpm is not installed. Please install pnpm first."
exit 1
fi

echo "ğŸ”§ Running pre-commit checks..."

# Check for merge conflicts (exclude .husky directory to avoid false positives)
if grep -r "<<<<<<< HEAD" . --exclude-dir=node_modules --exclude-dir=.git --exclude-dir=.husky;
then
echo "âŒ Merge conflict markers found. Please resolve conflicts before committing."
exit 1
fi

# Run type checking
echo "ğŸ” Running type check..."
pnpm type-check

# Run lint-staged
echo "ğŸ§¹ Running lint-staged..."
pnpm lint-staged

echo "âœ… Pre-commit checks passed!"