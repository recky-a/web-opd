#!/usr/bin/env sh

# Exit on any error
set -e

echo "ğŸ”„ Post-merge hook running..."

# Check if package.json or pnpm-lock.yaml changed
if git diff --name-only HEAD@{1} HEAD | grep -q "package.json\|pnpm-lock.yaml"; then
  echo "ğŸ“¦ Dependencies changed, running pnpm install..."
  pnpm install --frozen-lockfile
fi

# Check if any config files changed
if git diff --name-only HEAD@{1} HEAD | grep -q "\.config\.\|tsconfig\.json\|\.eslintrc"; then
  echo "âš™ï¸  Configuration files changed, you may need to restart your dev server."
fi

echo "âœ… Post-merge hook completed!"