#!/usr/bin/env sh
. "$(dirname -- "$0")/_/setup-env"

# Exit on any error
set -e

# Only run on branch switches (not file checkouts)
if [ "$3" = "1" ]; then
  echo "ðŸ”„ Switched to branch: $(git rev-parse --abbrev-ref HEAD)"
  
  # Check if package.json or pnpm-lock.yaml differ from previous branch
  if git diff --name-only HEAD@{1} HEAD | grep -q "package.json\|pnpm-lock.yaml"; then
    echo "ðŸ“¦ Dependencies may have changed, consider running: pnpm install"
  fi
fi
